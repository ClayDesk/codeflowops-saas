{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Stripe: Webhooks listen",
      "type": "stripe",
      "request": "launch",
      "command": "listen",
      "forwardTo": "http://localhost:8000",
      "events": [
        "customer.subscription.created",
        "customer.subscription.updated",
        "customer.subscription.deleted",
        "invoice.payment_succeeded",
        "invoice.payment_failed",
        "checkout.session.completed",
        "payment_intent.succeeded",
        "payment_intent.payment_failed"
      ],
      "skipVerify": false
    },
    {
      "name": "FastAPI: Launch Backend",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/main.py",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "ENVIRONMENT": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Next.js: Launch Frontend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Launch: Full Stack + Stripe Webhooks",
      "configurations": [
        "FastAPI: Launch Backend",
        "Next.js: Launch Frontend", 
        "Stripe: Webhooks listen"
      ]
    },
    {
      "name": "Launch: Backend + Stripe Webhooks",
      "configurations": [
        "FastAPI: Launch Backend",
        "Stripe: Webhooks listen"
      ]
    }
  ]
}
