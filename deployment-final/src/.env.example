# CodeFlowOps Environment Configuration
# Copy this file to .env 

# AWS Cognito Configuration
AWS_REGION=us-east-1
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=your_cognito_client_id_here
COGNITO_AUTHORITY=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Loggingmize for your environment

# Application Settings
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/codeflowops
# For SQLite (development):
SQLITE_DATABASE_PATH=data/codeflowops.db

# Redis Configuration (optional but recommended)
# REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_PREFIX=codeflowops:session
SESSION_TTL_HOURS=24

# Authentication Settings
REQUIRE_INVITATION=false
MAX_API_KEYS_PER_USER=5
DEFAULT_ADMIN_EMAIL=admin@codeflowops.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=100
AUTH_RATE_LIMIT=5
DEPLOYMENT_RATE_LIMIT=10

# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET_PREFIX=codeflowops
AWS_CLOUDFRONT_DISTRIBUTION_PREFIX=codeflowops

# GitHub Configuration
# GITHUB_TOKEN=your-github-token
# GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Deployment Settings
MAX_CONCURRENT_DEPLOYMENTS=5
DEPLOYMENT_TIMEOUT_MINUTES=30
BUILD_TIMEOUT_MINUTES=15

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
FRONTEND_URL=http://localhost:3000

# WebSocket Settings
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@codeflowops.com

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_API_KEYS=true
ENABLE_INVITATIONS=true
ENABLE_AUDIT_LOGS=true

# Development Settings
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false
MOCK_AWS_SERVICES=true
