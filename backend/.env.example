# CodeFlowOps SaaS Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here (if using temporary credentials)

# Session Management
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=1000
SESSION_CLEANUP_INTERVAL=300

# Build Configuration
BUILD_TIMEOUT=600
MAX_BUILD_SIZE=100
ALLOWED_BUILD_COMMANDS=npm,yarn
ALLOWED_NODE_VERSIONS=14,16,18

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
RATE_LIMIT_SKIP_SUCCESS=false
ENABLE_RATE_LIMITING=true

# Database Configuration
DATABASE_URL=sqlite:./codeflowops.db
REDIS_URL=redis://localhost:6379
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12
MAX_REQUEST_SIZE=10mb

# CloudFront Configuration
CLOUDFRONT_PRICE_CLASS=PriceClass_100
CLOUDFRONT_DEFAULT_TTL=86400
CLOUDFRONT_MAX_TTL=31536000
CLOUDFRONT_COMPRESS=true

# CodeBuild Configuration
CODEBUILD_COMPUTE_TYPE=BUILD_GENERAL1_SMALL
CODEBUILD_IMAGE=aws/codebuild/amazonlinux2-x86_64-standard:3.0
CODEBUILD_TYPE=LINUX_CONTAINER
CODEBUILD_TIMEOUT=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=./logs/codeflowops.log
ENABLE_DEBUG_LOGS=false

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_ANALYTICS=false
ENABLE_SESSION_CLEANUP=true

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_key_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here

# Default S3 Bucket (for system use)
DEFAULT_S3_BUCKET=codeflowops-system-bucket

# GitHub API (if needed for private repos in future)
# GITHUB_TOKEN=your_github_token_here

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_email_password
# EMAIL_FROM=noreply@codeflowops.com
