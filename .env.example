# Environment Variables for CodeFlowOps Production Deployment

# Copy this to .env and fill in your actual values

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://username:password@localhost:5432/codeflowops
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379
REDIS_QUEUE_PREFIX=codeflowops_jobs
REDIS_PASSWORD=your_redis_password

# === AWS CONFIGURATION ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 Buckets
TERRAFORM_STATE_BUCKET=codeflowops-terraform-states-prod
DEPLOYMENT_LOGS_BUCKET=codeflowops-deployment-logs-prod

# DynamoDB
DEPLOYMENT_LOCK_TABLE=codeflowops-deployment-locks-prod

# === AWS COGNITO CONFIGURATION ===
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1
COGNITO_DOMAIN=your-cognito-domain.auth.us-east-1.amazoncognito.com

# === JWT CONFIGURATION ===
JWT_SECRET_KEY=your-super-secret-jwt-key-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# === APPLICATION CONFIGURATION ===
DEBUG=False
ENVIRONMENT=production
NODE_ENV=production
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
WORKERS=4

# === CORS CONFIGURATION ===
ALLOWED_HOSTS=api.codeflowops.com,localhost
CORS_ORIGINS=https://app.codeflowops.com,https://admin.codeflowops.com,https://codeflowops.com

# === SECURITY CONFIGURATION ===
SLOW_REQUEST_THRESHOLD=2.0
RATE_LIMIT_REQUESTS_PER_MINUTE=100
BCRYPT_ROUNDS=12

# === EMAIL CONFIGURATION (for notifications) ===
SMTP_HOST=smtp.aws.amazon.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@codeflowops.com
SUPPORT_EMAIL=support@codeflowops.com

# === MONITORING CONFIGURATION ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your_datadog_api_key

# === THIRD-PARTY INTEGRATIONS ===
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# === FEATURE FLAGS ===
ENABLE_ADMIN_PANEL=true
ENABLE_BILLING=true
ENABLE_IMPERSONATION=true
ENABLE_USAGE_TRACKING=true
ENABLE_WEBHOOK_PROCESSING=true

# === TERRAFORM CONFIGURATION ===
TERRAFORM_VERSION=1.6.0
TERRAFORM_WORKSPACE_PREFIX=codeflowops

# === DEPLOYMENT CONFIGURATION ===
MAX_CONCURRENT_DEPLOYMENTS=10
DEPLOYMENT_TIMEOUT_MINUTES=30
CLEANUP_FAILED_DEPLOYMENTS_DAYS=7

# === QUOTA CONFIGURATION ===
FREE_PLAN_PROJECTS=3
FREE_PLAN_MINUTES=100
FREE_PLAN_STORAGE_GB=5

STARTER_PLAN_PROJECTS=10
STARTER_PLAN_MINUTES=400
STARTER_PLAN_STORAGE_GB=25

PRO_PLAN_MINUTES=3000
PRO_PLAN_STORAGE_GB=100

# === WEBHOOK CONFIGURATION ===
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
